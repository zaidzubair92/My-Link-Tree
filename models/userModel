const mongoose = require('mongoose');
const link = require('./linkModel').schema;

const user = new mongoose.Schema({
    firstName: {
        type: String,
        required: true
    },
    lastName: {
        type: String,
        required: true
    },
    email: {
        type: String,
        required: true
    },
    handle: {
        type: String,
        required: true
    },
    phoneNumber: {
        type: String,
        required: true
    },
    password: {
        type: String,
        required: true
    },
    links: {
        type: [link],
        required: false
    }
});

module.exports = mongoose.model("User", user);